<div class="navbar bg-base-100">
  <%# navbar 左　タイトルロゴ　%>
  <div class="flex-1">
    <%# POSTS LINK %>
    <%= link_to "Sakujiru", posts_path, class: "text-lg font-bold" %>
  </div>
  <%# navbar　右　%>
  <div class="flex-none gap-2">
    <%# navbar 右　検索窓　%>
    <div class="form-control">
      <input type="text" placeholder="Search" class="input input-bordered">
    </div>
    <%# ドロップダウン %>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img src="https://api.lorem.space/image/face?hash=33791">
        </div>
      </label>
      <%# ドロップダウン　項目　%>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        <%# ログイン後 %>
        <% if current_user %>
          <%# swipe %>
          <li><%= link_to "マッチング", swipe_path, class: "btn btn-ghost btn-sm rounded-btn" %></li>
          <%# 作字一覧 %>
          <li><%= link_to "作字一覧", posts_path, class: "btn btn-ghost btn-sm rounded-btn"%></li>
          <%# 新規投稿 %>
          <li><%= link_to "新規投稿", new_post_path, class: "btn btn-ghost btn-sm rounded-btn" %></li>
          <%# マイページ %>
          <li><%= link_to "マイページ", user_path(current_user), class: "btn btn-ghost btn-sm rounded-btn" %></li>
          <%# Log out %>
          <li><%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "btn btn-ghost btn-sm rounded-btn" %></li>
        <%# ログイン前 %>
        <% else %>
          <%# 作字一覧 %>
          <li><%= link_to "作字一覧", posts_path, class: "btn btn-ghost btn-sm rounded-btn"%></li>
          <%# SING UP %>
          <li><%= link_to "新規登録", new_user_registration_path, class: "btn btn-ghost btn-sm rounded-btn" %></li>
          <%# LOG IN %>
          <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-ghost btn-sm rounded-btn" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>