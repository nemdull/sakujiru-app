<%# header %>
<div class="navbar shadow-lg bg-neutral text-neutral-content rounded-box">
  <%# タイトル ヘッダー左 %>
  <div class="flex-1 px-2 mx-2">
    <%# POSTS LINK %>
    <%= link_to "Sakujiru", posts_path, class: "text-lg font-bold" %>
  </div>
  <%# ナビゲーション ヘッダー右 %>
  <div class="flex-none hidden px-2 mx-2 lg:flex">
    <%# ナビゲーション ヘッダー右 %>
    <div class="flex items-stretch">
      <%# ログイン後 %>
      <% if current_user %>
        <%# swipe %>
        <%= link_to "マッチング", swipe_path, class: "btn btn-ghost btn-sm rounded-btn" %>
        <%# 作字一覧 %>
        <%= link_to "作字一覧", posts_path, class: "btn btn-ghost btn-sm rounded-btn"%>
        <%# 新規投稿 %>
        <%= link_to "新規投稿", new_post_path, class: "btn btn-ghost btn-sm rounded-btn" %>
        <%# マイページ %>
        <%= link_to "マイページ", user_path(current_user), class: "btn btn-ghost btn-sm rounded-btn" %>
        <%# Log out %>
        <%= button_to "サインアウト", destroy_user_session_path, method: :delete, class: "btn btn-ghost btn-sm rounded-btn" %>
      <%# ログイン前 %>
      <% else %>
        <%# 作字一覧 %>
        <%= link_to "作字一覧", posts_path, class: "btn btn-ghost btn-sm rounded-btn"%>
        <%# SING UP %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-ghost btn-sm rounded-btn" %>
        <%# LOG IN %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-ghost btn-sm rounded-btn" %>
      <% end %>
    </div>
  </div>

  <%# ハンバーガー ヘッダー右 %>
  <div class="flex-none">
    <button class="btn btn-square btn-ghost">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

</div>