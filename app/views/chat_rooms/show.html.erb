<div class="flex justify-center">
  <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
    <div class="card-body items-center text-center">
      <h2 class="card-title"><%= @chat_room_user.name %>さんとのチャットルーム</h2>

      <div id='chat-messages'>
        <%= render @chat_messages %>
      </div>

      <form class="form-control">
        <label class="input-group input-group-md">
          <span>DM</span>
          <textarea data-behavior="chat_room_speaker" data-chat_room_id="<%= @chat_room.id %>" placeholder="メッセージを入力する" class="chat-room__message-form_textarea input input-bordered w-full max-w-xs"></textarea>
        </label>
      </form>
    </div>
  </div>
</div>