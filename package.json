{
  "name": "sakujiru",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4",
    "@hotwired/turbo-rails": "^8.0.0",
    "@popperjs/core": "^2.11.2",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "autoprefixer": "10",
    "daisyui": "^2.6.2",
    "esbuild": "^0.23.0",
    "sass": "^1.77.8",
    "hammerjs": "^2.0.8",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1",
    "postcss": "8",
    "postcss-loader": "4",
    "tailwindcss": "2"
  },
  "version": "0.1.0",
  "devDependencies": {},
  "scripts": {
    "build": "yarn build:tailwind && yarn build:js && yarn build:css",
    "build:tailwind": "tailwindcss -c tailwind.config.js -i app/javascript/stylesheets/application.css -o app/assets/builds/tailwind.css --minify",
    "build:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds",
    "build:js:watch": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --watch",
    "build:css": "sass app/assets/stylesheets/application.scss:app/assets/builds/application.css --no-source-map",
    "build:css:watch": "sass --watch app/assets/stylesheets/application.scss:app/assets/builds/application.css --no-source-map"
  }
}
